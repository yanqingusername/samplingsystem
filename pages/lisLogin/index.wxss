page{
    background: #F5F5F5;
}

.login-section {
    height: 100%;
    display: flex;
    background: #F5F5F5;
    flex-direction: column;
    align-items: center;
}
    .submit-btn {
      width: 500rpx;
    }
    .root_header {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 360rpx;
    }
  
    .icon_logo {
      width: 100%;
      height: 360rpx;
    }
  
    .icon_login_text {
      font-size: 36rpx;
      font-weight: 600;
      color: #333333;
    }
  
    .icon_login_content{
      font-size: 36rpx;
      font-family: PingFangSC-Semibold, PingFang SC;
      font-weight: 600;
      color: #333333;
      margin-top: 60px;
    }
  
    .main_view{
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: -70rpx;
      flex-direction: column;
    }
  
    .main {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 670rpx;
  height: 430rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  z-index: 1;
    }
    .main_item_view{
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 30rpx;
      width: 90%;
      border-bottom: 1px solid #DDDDDD;
    }
    .main_item_text{
      font-size: 36rpx;
      font-weight: 600;
      color: #333333;
      width: 20%;
    }
    .form-item {
      display: flex;
      height: 100rpx;
      position: relative;
      align-items: center;
      width: 80%;
    }
  
      input {
        height: 100rpx;
        border: none;
        outline: none;
        width: 100%;
        border-bottom: none;
        font-size: 36rpx;
        font-family: PingFangSC-Regular, PingFang SC;
        font-weight: 400;
        color: #999999;
      }
    
  
    .submit_view {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 70rpx;
      width: 90%;
      background: #307FF5;
        border: 1px solid #307FF5;
      border-radius: 16rpx;
      color: #ffffff;
      padding: 20rpx 0rpx;
      font-size: 32rpx;
    }
  
    .get_code {
      position: absolute;
      right: 25rpx;
      font-size: 36rpx;
      font-family: PingFangSC-Regular, PingFang SC;
      font-weight: 400;
      color: #E06596;
    }
  